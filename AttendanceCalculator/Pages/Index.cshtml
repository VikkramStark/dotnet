@page
@model IndexModel

<h1>Attendance Percentage Calculator</h1>

<form method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Input.Name" value="@Model.Input.Name" />
    </div>
    <div>
        <label for="regno">Registration Number:</label>
        <input type="text" id="regno" name="Input.RegNo" value="@Model.Input.RegNo" />
    </div>
    <div>
        <label for="totalDays">Total Number of Working Days:</label>
        <input type="number" id="totalDays" name="Input.TotalDays" step="1" value="@Model.Input.TotalDays" />
    </div>
    <div>
        <label for="presentDays">Present Days:</label>
        <input type="number" id="presentDays" name="Input.PresentDays" step="1" value="@Model.Input.PresentDays" />
    </div>
    <div>
        <label for="absentDays">Absent Days:</label>
        <input type="number" id="absentDays" name="Input.AbsentDays" step="1" value="@Model.Input.AbsentDays" />
    </div>
    <button type="submit">Calculate</button>
</form>

@if (Model.Result != null)
{
    <div>
        <h2>Attendance Details</h2>
        <p><strong>Attendance Percentage:</strong> @Model.Result.Percentage%</p>
        <p><strong>Fine:</strong> @Model.Result.Fine</p>
    </div>
}
